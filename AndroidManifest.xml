<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.valfom.tracker"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" android:maxSdkVersion="16" android:targetSdkVersion="15"/>
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/Theme.Sherlock.Light.DarkActionBar">
        <activity
            android:name=".TrackerActivity"
            android:label="@string/activity_title_tracker" 
             android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TrackerInfoActivity" android:label="@string/activity_title_info"
            android:screenOrientation="portrait" />
        <activity android:name=".TrackerPreferenceActivity" android:label="@string/activity_title_settings"
            android:screenOrientation="portrait" />
        <service android:name="TrackerService" />
    </application>

</manifest>