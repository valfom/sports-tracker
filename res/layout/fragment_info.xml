<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <ScrollView
        android:id="@+id/svInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBtnsInfo" >
    
        <RelativeLayout
	            android:id="@+id/rlInfo"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >
	            
            <TextView 
                android:id="@+id/tvActivityInfo"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_alignParentLeft="true"
		        android:layout_marginTop="40dp"
		        android:layout_marginLeft="40dp"
		        style="@style/ListItemActivity" />
        
		    <TextView
		        android:id="@+id/dateTitleTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/tvActivityInfo"
		        android:layout_alignLeft="@+id/tvActivityInfo"
		        android:layout_marginTop="24dp"
		        android:text="Date" />
		
		    <TextView
		        android:id="@+id/distTitleTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/dateTitleTV"
		        android:layout_below="@+id/dateTitleTV"
		        android:layout_marginTop="24dp"
		        android:text="Distance" />
		
		    <TextView
		        android:id="@+id/timeTitleTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/distTitleTV"
		        android:layout_below="@+id/distTitleTV"
		        android:layout_marginTop="24dp"
		        android:text="Time" />
		
		    <TextView
		        android:id="@+id/maxSpeedTitleTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/timeTitleTV"
		        android:layout_below="@+id/timeTitleTV"
		        android:layout_marginTop="24dp"
		        android:text="Max speed" />
		
		    <TextView
		        android:id="@+id/dateTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/distTitleTV"
		        android:layout_centerHorizontal="true"
		        android:text="" />
		
		    <TextView
		        android:id="@+id/distTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/distTitleTV"
		        android:layout_alignBottom="@+id/distTitleTV"
		        android:layout_alignLeft="@+id/dateTV"
		        android:text="" />
		
		    <TextView
		        android:id="@+id/timeTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/timeTitleTV"
		        android:layout_alignLeft="@+id/distTV"
		        android:text="" />
		
		    <TextView
		        android:id="@+id/maxSpeedTV"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/maxSpeedTitleTV"
		        android:layout_alignLeft="@+id/timeTV"
		        android:text="" />
		</RelativeLayout>
	</ScrollView>

    <LinearLayout
        android:id="@+id/llBtnsInfo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/Panel"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone" >
        
	    <Button
	        android:id="@+id/deleteBtn"
	        style="@style/CustomButton.Stop"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="@string/btn_delete"  />
	
	    <Button
	        android:id="@+id/saveBtn"
	        style="@style/CustomButton.Pause"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="@string/btn_save" />
	</LinearLayout>

</RelativeLayout>